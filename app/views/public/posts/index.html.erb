<div class="col-4 mx-auto">
  <div class="row mt-3">
     <% @posts.each do |post| %>
     <div class="row shadow" style="background-color: #FFFFFF;">
       <%= link_to post_path(post.id) do %>
         <div class="col">
           <%= image_tag @user.get_image, class:"rounded-circle mx-auto d-block" %>
         </div>
         <div class="col">
           <%= post.title %>
           <%= post.body %>
         </div>
       <% end %>
       </div>
      <% end %>
  </div>
</div>