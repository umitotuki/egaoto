<div class="col-12 col-xl-4 col-lg-6 col-md-8 col-sm-10 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row d-frex justify-content-center">
    <h3 class="mt-3">投稿編集</h3>
  </diV>
    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <div class="row my-3 justify-content-center">
        <%= f.text_field :title, placeholder: 'タイトル名', class:"ml-4 mb-3 col-10" %>
      </div>
      <div class="row my-3 justify-content-center">
        <%= f.text_area :body, placeholder: '投稿内容', class:"ml-4 mb-3 col-10",rows: "10" %>
        <%= f.file_field :image, accept: "image/*", class:"ml-4 mb-3" %>
      </div>
      <div class="row mb-3 d-frex justify-content-center">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, @post.genre_id), include_blank: 'ジャンル選択' %>
      </div>
      <div class="row d-frex justify-content-center">
        <%= f.radio_button :is_draft, :true %>
        <%= f.label :下書き %>
        <%= f.radio_button :is_draft, :false %>
        <%= f.label :投稿 %>
      </div>
      <div class="row pb-3 d-frex justify-content-center">
        <% if @post.user == current_user %>
          <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger mr-3" %>
        <% end %>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>