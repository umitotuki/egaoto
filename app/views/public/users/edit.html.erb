<div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row d-frex justify-content-center">
    <h3 class="mt-3">マイページ編集</h3>
  </div>
  <div class="row my-3 ml-5">
    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <p class="ml-4">マイページ画像</p>
      <%= f.file_field :image, accept: "image/*", class:"ml-4 mb-3" %>
      <%= f.text_field :name, placeholder: 'ユーザー名', class:"ml-4 mb-3 w-75" %>
      <%= f.text_field :birth, placeholder: '生年月日', class:"ml-4 mb-3 w-75" %>
      <%= f.text_field :location, placeholder: '〇〇県〇〇市', class:"ml-4 mb-3 w-75" %>
      <%= f.text_area :introduction, placeholder: '自己紹介', class:"ml-4 mb-3 w-75" %>
      <div class="ml-4">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :女性　 %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :男性 %>
      </div>
      <div class="row mb-3 d-frex justify-content-center">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>