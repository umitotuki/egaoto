<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-5">
      <h3>投稿一覧</h3>
      
       <% @posts.each do |post| %>
         <%= link_to post_path(post.id) do %>
           <%= post.name %>
           <%= post.body %>
         <% end %>
       <% end %>
    </div>
  </div>
</div>