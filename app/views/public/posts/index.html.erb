<div class="col-4 mx-auto">
  <div class="row">
    <h3>投稿一覧</h3>
  </div>
  <div class="row shadow" style="background-color: #FFFFFF;">
     <% @posts.each do |post| %>
       <%= link_to post_path(post.id) do %>
         <%= post.title %>
         <%= post.body %>
       <% end %>
     <% end %>
  </div>
</div>