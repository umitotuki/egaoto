<% if @model == 'user' %>
<div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row mt-3 justify-content-center">
    <h3>ユーザーの検索結果 "<%= @search %>"</h3>
  </div>
  <duv class="row mx-auto">
  <table class="table">
    <thead>
      <tr>
        <th style="text-align: center;">プロフィール画像</th>
        <th style="text-align: center;">ユーザー名</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |user| %>
        <tr>
          <td><%= image_tag user.get_image, class:"rounded-circle mx-auto d-block" %></td>
          <td style="text-align: center;vertical-align: middle; font-size: 20px;"><%= link_to user.name ,user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% elsif @model == 'post' %>
  <div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
    <div class="row mt-3 justify-content-center">
      <h3>投稿の検索結果 "<%= @content %>"</h3>
    </div>
    <div class="row">
      <% @records.each do |post| %>
         <div class="col-4 my-3">
           <%= image_tag post.user.get_image, class:"rounded-circle mx-auto d-block" %>
         </div>
         <div class="col-7 my-3">
          <%= link_to post_path(post.id),style:"text-decoration: none;" do %>
         <div>
           <h5 style="color: #000;"><%= post.title %></h5>
         </div>
         <div>
          <p style="color: #000;"><%= post.body %></p>
         </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
　　<div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row mt-3 justify-content-center">
    <h2 class="section-title mt-3 text-success">検索は見つかりませんでした</h2>
  </div>
<% end %>

