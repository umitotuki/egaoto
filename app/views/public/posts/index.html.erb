<div class="col-4 mx-auto" style="background-color: #FFFFFF;">
  <div class="row mt-3">
   <div class="d-flex justify-content-center">
      <%= render partial: 'searches/_search' %>
  </div>
   <% @posts.each do |post| %>
     <div class="col-4 my-3">
       <%= image_tag post.user.get_image, class:"rounded-circle mx-auto d-block" %>
     </div>
     <div class="col-7 my-3">
       <%= link_to post_path(post.id),style:"text-decoration: none;" do %>
     <div>
       <h5 style="color: #000;"><%= post.title %></h5>
     </div>
     <div>
       <p style="color: #000;"><%= post.body %></p>
     </div>
      <% end %>
   <% end %>
  </div>
</div>