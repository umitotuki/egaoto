<div class="col-4 mx-auto" style="background-color: #FFFFFF;">
  <div class="row">
      <h3>マイページ編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @user, user_path(@user.id), method: :patch do |f| %>
      <%= f.text_field :name, placeholder: 'ユーザー名', class:"ml-4 mb-3 w-75" %>
　　　<%= f.text_field :birth, placeholder: '生年月日', class:"ml-4 mb-3 w-75" %>
      <%= f.text_field :location, placeholder: '〇〇県〇〇市', class:"ml-4 mb-3 w-75" %>
      <%= f.text_area :intoroduction, placeholder: '自己紹介', class:"ml-4 mb-3 w-75" %>
      <div class="pr-auto">
        <%= f.radio_button :is_draft, :true %>
        <%= f.label :女性 %>
        <%= f.radio_button :is_draft, :false %>
        <%= f.label :男性 %>
      </div>
      <div class="row mx-auto">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>