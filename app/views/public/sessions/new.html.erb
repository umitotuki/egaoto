<div class="container">
  <div class="row d-frex justify-content-center">
    <div class="col-5">
      <h2 class="section-title">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "ログイン", class:"btn btn-primary px-5"  %>
            </td>
          </tr>
        </table>
      <% end %>
      <p>登録がお済みでない方<br/>
          <%= link_to "こちら", new_user_registration_path %>　から新規登録ができます。</p
    </div>
  </div>
</div>
