<div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row">
    <div class="col-3 mt-4 ml-3">
      <%= image_tag @post.user.get_image, class:"rounded-circle mx-auto d-block" %>
      <p class="text-center"><%= @post.user.name %></p>
    </div>
    <div class="col-8 mt-3">
      <h4 class="mt-3 mx-3"><b><%= @post.title %></b></h4>
      <p class="my-3  mx-3"><%= @post.body %></p>
    </div>
  </div>
  <div class="row d-frex justify-content-center">
    <%= image_tag @post.get_image(400, 400) %>
  </div>
  <div class="row">
    <div class="col">
      <% if @post.is_draft? && @post.user == current_user %>
        <td>下書き</td>
      <% else %>
        <td>投稿</td>
      <% end %>
    </div>
    <div class="col">
      <% if @post.user == current_user %>
        <%= link_to '編集', edit_post_path(@post.id), class: "btn btn-success mx-3 my-2" %>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger mr-3 my-2" %>
      <% end %>
  </div>
</div>
