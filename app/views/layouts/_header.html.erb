<header class="page-header" style="background-color: #F8C6BD;">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to root_path,class: "navbar-brand" do %>
        <%= image_tag asset_path('logo.jpg'), size: "250x110" %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon btn-outline-light"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
         <!-- 管理者がログインした時の表示 -->
          <% if admin_signed_in? %>
            <li>
              <%= link_to "投稿一覧", admin_top_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li>
              <%= link_to "ユーザー一覧", admin_users_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admin_genres_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-outline-light nav-link" %>
            </li>
            <!-- userがログインした時の表示 -->
          <% elsif user_signed_in? %>
            <li class="ml-4">
              <%= link_to "About", about_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li class="ml-4">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-outline-light nav-link" %>
            </li>
              <!-- ログインしていない時の表示 -->
          <% else %>
            <li class="ml-4">
              <%= link_to "About", about_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li class="ml-4">
              <%= link_to "新規登録", new_user_registration_path, class:"btn btn-outline-light nav-link" %>
            </li>
            <li class="ml-4">
              <%= link_to "ログイン", user_session_path, class:"btn btn-outline-light nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>