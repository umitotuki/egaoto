<div class="col-4 mx-auto mt-3" style="background-color: #FFFFFF;">
  <div class="row d-flex justify-content-center">
    <h3 class="my-3">ジャンル編集</h3>
  </div>
  <div class="row pb-4 d-flex justify-content-center">
    <%= form_with model: @genre,url: admin_genre_path(@genre), method: :patch do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, placeholder: 'ジャンル名', class: "w-50" %>
      <%= f.submit '変更を保存', class: "btn btn-sm btn-success" %>
    <% end %>
  </div>
</div>
