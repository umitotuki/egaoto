<div class="col-4 mx-auto">
  <div class="row mt-3">
     <div class="row shadow" style="background-color: #FFFFFF;">
     <% @posts.each do |post| %>
         <div class="col-6 mb-3">
           <%= image_tag post.user.get_image, class:"rounded-circle mx-auto d-block" %>
         </div>
         <div class="col-5 mb-3">
        <%= link_to post_path(post.id) do %>
        <div>
           <h4 style="color: #ffffff;"><%= post.title %></h4>
        </div>
        <div>
           <p style="color: #ffffff;"><%= post.body %></p>
        </div>
         <% end %>
        </div>
      <% end %>
      </div>
  </div>
</div>