<div class="col-4 mx-auto my-3" style="background-color: #FFFFFF;">
  <div class="row d-frex justify-content-center">
    <h3 class="my-3">ジャンル検索結果</h3>
  </div>
  <div class="d-flex flex-column">
    <% @posts.each do |post|  %>
     <div class="card border-light shadow m-3">
      <div class="row">
        <div class="col-4 my-3 text-center">
          <%= image_tag post.user.get_image, class:"rounded-circle mx-auto d-block" %>
        </div>
        <div class="col-7 my-3">
          <%= link_to post_path(post.id) do %>
            <h5 style="color: #000;"><%= post.title %></h5>
            <p style="color: #000;"><%= post.body %></p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-4">
          <%= link_to post.user.name ,user_path(post.user), class:"my-3" ,style:"color: #000;" %>
        </div>
        <div class="col-7">
          <% if post.genre.present? %>
            <p>ジャンル:<%= post.genre.name %></p>
          <% else %>
            <p>ジャンル:　　</p>
          <% end %>  
        </div>
      </div>
     </div>
    <% end %>
  </div>
</div>