 <div class="col-12 col-xl-4 col-lg-6 col-md-8 col-sm-10 mx-auto mt-3" style="background-color: #FFFFFF;">
   <div class="d-flex justify-content-center">
     <div class="my-3">
       <%= render partial: 'layouts/search' %>
     </div>
   </div>
   <div class="d-flex flex-column">
    <% @posts.each do |post|  %>
     <div class="card border-light shadow m-3">
      <div class="row">
        <div class="col-4 my-3 text-center">
          <%= image_tag post.user.get_image, class:"rounded-circle mx-auto d-block" %>
          <%= link_to post.user.name , admin_user_path(post.user), class:"my-3" ,style:"color: #000;" %>
        </div>
        <div class="col-7 my-3">
          <%= link_to admin_post_path(post.id) do %>
            <h5 style="color: #000;"><%= post.title %></h5>
            <p style="color: #000;"><%= post.body %></p>
          <% end %>
        </div>
      </div>
     </div>
    <% end %>
   </div>
 </div>